@model Garage_2._0.Models.Vehicle

@{
    ViewData["Title"] = "Confirm Removal";
}

<h1>@ViewBag.Message</h1>
<hr />

<dl class="row">
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.VehicleType)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.VehicleType)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.RegNumber)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.RegNumber)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Color)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Color)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Brand)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Brand)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Model)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Model)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.NumWheels)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.NumWheels)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.ParkingStart)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.ParkingStart)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.ParkingEnd)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.ParkingEnd)
    </dd>
</dl>
<form asp-action="RemoveVehicle" method="post">
    <input type="hidden" asp-for="RegNumber" />
    <button type="submit" class="btn btn-danger">Remove Vehicle</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
